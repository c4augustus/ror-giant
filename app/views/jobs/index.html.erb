<%= render partial: 'shared/header', locals: { tab:@virtual_path[/^[^\/]+/] } %>

<div class="container-fluid">
<!-- @@@ design draft 1
  <h2><span class="giant-panel-heading">&nbsp;&nbsp;</span>OPEN JOBS</h2>
-->
  <div class="col-sm-1">
  </div>
  <div class="col-sm-10">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h2 class="panel-title">Open Jobs</h2>
      </div>
    </div> <!-- /panel -->
    <hr>
  <%  @jobs.each do |job| %>
    <%= render partial: 'details', locals: {job: job} %>
    <br>
    <%= link_to 'APPLY',         apply_job_path(job), class: 'giant-button' %>
    <%= link_to 'TELL A FRIEND',  tell_job_path(job), class: 'giant-button' %>
    <hr>
  <%  end %>
  </div> <!-- /col -->
  <div class='col-sm-1'>
  </div>
</div> <!-- /container -->

<%= render partial: 'shared/footer' %>
