<%= render partial: "shared/header", locals: { tab:@virtual_path[/^[^\/]+/] } %>

<div class="container-fluid">
<!-- @@@ design draft 1
  <h2><span class="giant-panel-heading">&nbsp;&nbsp;</span>OPEN JOBS</h2>
-->
  <div class='col-sm-1'>
  </div>
  <div class='col-sm-10'>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h2 class="panel-title">Open Jobs</h2>
      </div>
    </div> <!-- /panel -->
    <hr>
  <%  @jobs.each do |job| %>
    <div class="giant-job">
      <h4>
        <%  Job.categories.each_with_index do |cat, i| %>
          <%  if i > 0 %>
                &nbsp;|&nbsp;
          <%  end %>
          <%  if (iscat = (job.category == cat)) %> 
                <strong>
          <%  end %>
          <%= cat %>
          <%  if iscat %> 
                </strong>
          <%  end %>
        <%  end %>
      <h3>                            <%= job.title %></h3>
      <h4><strong>JOB#</strong>       <%= job.id_scheme_ext %></h4>
      <br>
      <h4><strong>LOCATION:</strong>  <%= job.location %></h4>
      <h4><strong>STATUS:</strong>    <%= job.employment_type %></h4>
      <h4><strong>STARTS:</strong>    <%= job.start_date %></h4>
      <h4><strong>RATE:</strong>      <%= job.pay_rate %></h4>
      <br>
      <p><%= raw job.description %><%= link_to 'MORE', job %></p>
      <br>
      <%= link_to 'APPLY',         apply_job_path(job), class: 'giant-button' %>
      <%= link_to 'TELL A FRIEND',  tell_job_path(job), class: 'giant-button' %>
    </div> <!-- /giant-job -->
    <hr>
  <%  end %>
  </div> <!-- /col -->
  <div class='col-sm-1'>
  </div>
</div> <!-- /container -->

<%= render partial: "shared/footer" %>
