<%= render partial: "shared/header", locals: { tab:@virtual_path[/^[^\/]+/] } %>

<div class="container-fluid">
<div class="row">
  <h2><span class="giant-heading-bullet">&nbsp;&nbsp;</span>OPEN JOBS</h2>
</div>
<div class="row">

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Identification</th>
      <th>Location</th>
      <th>Work schedule</th>
      <th>Start date</th>
      <th>Pay rate</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.identification %></td>
        <td><%= job.location %></td>
        <td><%= job.work_schedule %></td>
        <td><%= job.start_date %></td>
        <td><%= job.pay_rate %></td>
        <td><%= job.description %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>

</div> <!-- /row -->
</div> <!-- /container -->

<%= render partial: "shared/footer" %>
